<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Coffee Shop</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Coffee Order Line-up</h2>
      <ul>
        {{#each this}} {{#if drink}}
        <li>
          {{name}}
          <button type="button" id="update-drink-{{id}}" data-id="{{id}}" class="btn btn-light btn-sm update-drink" name="drink">SluRRp</button>
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Past orders</h2>
      <p>{{coffee_order}}</p>
      <ul>
        <p>{{this}}</p>
        {{#each this}} {{#unless drink}}
        <li>
          {{name}}
          <button type="button" class="btn btn-light btn-sm" name="drink"></button>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2>Make a New Coffee Order</h2>

<form class="create-form">
  <div class="form-group">
    <label for="ca">Coffee Flavour:</label>
    <input type="text" id="ca" name="name">
    <button type="submit" class="btn btn-warning">Place Order</button>
  </div>
</form>

